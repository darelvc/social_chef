- hidden = "display:none"

.row.controls
  .wow.pager.fadeInUp
    = link_to t('the_comments.edit'), "#", class: "edit btn btn-success button"
    = link_to t('the_comments.cancel'), "#", class: "btn btn-warning edit button", style: "display:none"

    - to_hide = comment.published? ? hidden : nil
    - opts    = { remote: true, style: to_hide, method: :post }
    = link_to [:to_published, comment], opts.merge(class: "btn btn-primary to_published button") do
      = t('the_comments.to_published')
    
    - to_hide = comment.draft? ? hidden : nil
    - opts    = { remote: true, style: to_hide, method: :post }
    = link_to [:to_draft, comment], opts.merge(class: "btn btn-warning to_draft button") do
      = t('the_comments.to_draft')

    - to_hide = comment.deleted? ? hidden : nil
    - opts    = { remote: true, style: to_hide, method: :delete, data: { confirm: t('the_comments.delete_confirm') } }
    = link_to [:to_deleted, comment], opts.merge(class: "btn btn-danger to_deleted button") do
      = t('the_comments.to_deleted')

    - opts = { remote: true, method: :post}
    = link_to [:to_spam, comment], opts.merge(class: "btn btn-danger to_spam button") do
      = t('the_comments.to_spam')
    = link_to t('the_comments.additional_info'), "#", class: "additional_info btn btn-info button"